{
  "compilerOptions": {
    "baseUrl": "src",
    "target": "es5",
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "outDir": "dist",
    "sourceMap": true,
    "types": [
      "node",
      "mocha"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "paths": {
      "*": [
        "@types/*"
      ]
    },
    "lib": [
      "es7",
      "es6"
    ],
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules/**",
    "src/@types"
  ]
}
